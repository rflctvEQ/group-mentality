<div class="row">
  <div class="col-md-5 login-div">
    <h2>Login</h2>

    <form class="form login-form">
      <div class="form-group">
        <label for="email-login" class="email-declaration">Email:</label>
        <input class="form-input" type="text" id="email-login" />
      </div>
      <div class="form-group">
        <label for="password-login" class="password-declaration">Password:</label>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-check moderator-check">
        <input class="form-check-input" type="checkbox" value="" id="defaultCheck1">
        <label class="form-check-label" for="defaultCheck1" id="moderatorCheck">
          Moderators please check here.
        </label>
      </div>
      <div class="form-group">
        <button class="btn btn-primary login-btn" type="submit">Login</button>
      </div>
    </form>
  </div>
  <div class="col-md-5 signup-div">
    <h2>Sign up</h2>

    <form class="form signup-form">
      <div class="form-group">
        <label for="name-signup" class="name-declaration">Name:</label>
        <input class="form-input" type="text" id="name-signup" />
      </div>
      <div class="form-group">
        <label for="email-signup" class="email-declaration">Email:</label>
        <input class="form-input" type="text" id="email-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup" class="password-declaration">Password:</label>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <button class="btn btn-primary signup-btn" type="submit">Sign up</button>
      </div>
    </form>
  </div>
</div>

<script src="./js/login.js"></script>